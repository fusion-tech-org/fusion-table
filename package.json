{
  "name": "fusion-ui",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:vite": "turbo build:vite",
    "dev": "turbo dev",
    "vite:dev": "turbo vite:dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release:tabulator": "turbo build --filter=fusion-tabulator && changeset publish",
    "release:excel": "turbo build --filter=fusion-excel && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.1.0",
    "turbo": "^1.11.2"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "deep-diff": "^1.0.2"
  }
}